<Window x:Class="Poker_game_approfondissement_prog.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poker_game_approfondissement_prog.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Poker To Win" Height="450" Width="800">

     
    <Grid>
        <Grid.Background>
            <ImageBrush AlignmentX="Center" AlignmentY="Top" ImageSource="/Ressources/autres/bg_menu.jpg" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />

            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Button x:Name="bouttonJouer" Grid.Column="2" Grid.Row="2" Click="btn_Jouer_Click" Content="Jouer" Margin="0,20,200,20" />
        <Button x:Name="bouttonMains" Grid.Column="2" Grid.Row="3" Click="btn_Mains_Click" Content="Mains" Margin="0,20,200,20" />
        <Button x:Name="bouttonTableauScores" Grid.Column="2" Grid.Row="4" Click="btn_Tableau_Scores_Click" Content="Tableau des Scores" Margin="0,20,200,20" />
        <Button x:Name="bouttonQuitter" Grid.Column="2" Grid.Row="5" Click="btn_Quitter_Click" Content="Quitter" Margin="0,20,200,20" />

    </Grid>
</Window>
