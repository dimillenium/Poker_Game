<Window x:Class="Poker_game_approfondissement_prog.Views.Pseudonyme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poker_game_approfondissement_prog.Views"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Pseudonyme" Height="200" Width="300">
    <Grid>
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Vertical" Width="275" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock 
        Text="Entrez un identifiant"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="17"
        FontWeight="Bold"
        TextWrapping="Wrap"
        Margin="0,10"/>
            <TextBox x:Name="pseudonyme" ></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Continuer" Click="btn_Continuer_Click" Margin="5"/>
            <Button Content="Annuler" Click="btn_Annuler_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
